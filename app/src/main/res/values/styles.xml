<resources>

    <style name="DarkAppTheme" parent="@style/Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorAccentDark</item>
        <!-- status bar will have the same color as the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="cardBackground">@color/cardBackgroundDark</item>
        <item name="cardForeground">@color/cardForegroundDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="iconsTint">@color/white</item>
        <item name="iconBrush">@drawable/ic_brush_white</item>
        <item name="iconPalette">@drawable/ic_palette_white</item>
        <item name="iconQuestionAnswer">@drawable/ic_question_answer_white</item>
        <item name="iconMic">@drawable/ic_mic_white</item>
        <item name="iconMicNone">@drawable/ic_mic_none_white</item>
        <item name="iconSettings">@drawable/ic_settings_white</item>
        <item name="iconPerson">@drawable/ic_person_white</item>
        <item name="iconLanguage">@drawable/ic_language_white</item>
        <item name="iconSpeakerPhone">@drawable/ic_speaker_phone_white</item>
        <item name="iconExpandMore">@drawable/ic_expand_more_white</item>
        <item name="iconExtension">@drawable/ic_extension_white</item>
        <item name="iconDone">@drawable/ic_done_white</item>
        <item name="iconContentCopy">@drawable/ic_content_copy_white</item>
        <item name="iconShare">@drawable/ic_share_white</item>
        <item name="iconRecordVoiceOver">@drawable/ic_record_voice_over_white</item>
    </style>

    <style name="SttServiceDarkAppTheme" parent="DarkAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="LightAppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccentLight</item>
        <!-- status bar will have the same color as the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="cardBackground">@color/cardBackgroundLight</item>
        <item name="cardForeground">@color/cardForegroundLight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="iconsTint">@color/black</item>
        <item name="iconBrush">@drawable/ic_brush_black</item>
        <item name="iconPalette">@drawable/ic_palette_black</item>
        <item name="iconQuestionAnswer">@drawable/ic_question_answer_black</item>
        <item name="iconMic">@drawable/ic_mic_black</item>
        <item name="iconMicNone">@drawable/ic_mic_none_black</item>
        <item name="iconSettings">@drawable/ic_settings_black</item>
        <item name="iconPerson">@drawable/ic_person_black</item>
        <item name="iconLanguage">@drawable/ic_language_black</item>
        <item name="iconSpeakerPhone">@drawable/ic_speaker_phone_black</item>
        <item name="iconExpandMore">@drawable/ic_expand_more_black</item>
        <item name="iconExtension">@drawable/ic_extension_black</item>
        <item name="iconDone">@drawable/ic_done_black</item>
        <item name="iconContentCopy">@drawable/ic_content_copy_black</item>
        <item name="iconShare">@drawable/ic_share_black</item>
        <item name="iconRecordVoiceOver">@drawable/ic_record_voice_over_black</item>
    </style>

    <style name="SttServiceLightAppTheme" parent="LightAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="SplashScreenTheme" parent="LightAppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar will have the same color as the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- TODO making this extend light theme always (under any theme) could be unwanted -->
    <style name="ActionBarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar will have the same color as the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>
